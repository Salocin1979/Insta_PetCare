<div>
  <% if user_signed_in? %>
    <header class="user-header">
      <div class="info">
        <h1>Calling a veterinarian</h1>
        <p>Please fill out the form</p>
      </div>
    </header>
    <main>
      <%= simple_form_for [@animal, @user, @consultation] do |f| %>
        <div class= "popular section-wrapper">
          <%= f.association :animal, selected: @animal %>
          <%= f.association :user, label_method: :first_name %>
          <%= f.input :date, label: "SÃ©lectionnez vos dates:",
                               as: :string,
                               required: false,
                               input_html: { id: "range_start", class:"form-control", placeholder:"DD/MM/YYYY"} %>
        </div>
        <div class="cta"><%= f.submit "Submit" %></div>
      <% end %>
    <% else %>
      <div class="categories section-wrapper">
        <div class="flex-header">
          <%= link_to "Please Log In", new_user_session_path, class: "nav-link" %>
        </div>
      </div>
    </main>
  <% end %>
</div>
</div>
