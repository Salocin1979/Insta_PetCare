<h1>Symptom page</h1>


    <h2 class="description">description of the treatment </h2>

    <div id="accordion">
      <% @symptoms.each_with_index do |symptom,index| %>
        <div class="card">
          <div class="card-header" id="heading<%= index %>">
            <h5 class="mb-0">
              <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
                 <%= symptom.suggestion%>
              </button>
            </h5>
          </div>

          <div id="collapse<%= index %>" class="collapse" aria-labelledby="heading<%= index %>" data-parent="#accordion">
            <div class="card-body">
              <%= symptom.description%>
            </div>
          </div>
        </div>
      <% end %>
    </div>



